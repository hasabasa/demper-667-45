# ai_seller.env
"""
Переменные окружения для AI-продажника
"""

# AI-продажник настройки
AI_SELLER_ENABLED=true
AI_SELLER_URL=http://localhost:8080
AI_SELLER_TEST_MODE=false
AI_SELLER_MAX_MESSAGES=3
AI_SELLER_COOLDOWN_HOURS=24
AI_SELLER_MAX_DAILY_MESSAGES=100
AI_SELLER_FALLBACK=true

# OpenAI настройки
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Google Sheets настройки
GOOGLE_SHEET_URL=your_google_sheet_url_here
GOOGLE_CREDENTIALS_FILE=kaspiseller-57379-firebase-adminsdk-fbsvc-1c22a63a88.json

# WAHA настройки
WAHA_API_ENDPOINT=http://localhost:3000
WAHA_SESSION_ID=kaspi_demper_session

# Мониторинг
AI_SELLER_METRICS=true
AI_SELLER_METRICS_RETENTION=30

# Безопасность
AI_SELLER_RATE_LIMITING=true
AI_SELLER_OPT_OUT=true
AI_SELLER_OPT_OUT_KEYWORDS=стоп,отписка,не пишите,stop

# Fallback сообщение
AI_SELLER_FALLBACK_TEMPLATE="Здравствуйте, {customer_name}!\nСпасибо за ваш заказ {order_id}.\n\nВаш заказ \"{product_name}\" готов к самовывозу.\n\nЕсли у вас есть вопросы, обращайтесь в любое время.\n\nС уважением,\n{shop_name}"
